<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/activateWallpaperButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate Wallpaper"
        app:layout_constraintBottom_toTopOf="@+id/unityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/unityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Unity"
        app:layout_constraintTop_toBottomOf="@+id/activateWallpaperButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Phezu"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/closeServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Service"
        app:layout_constraintBottom_toTopOf="@+id/unityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activateWallpaperButton" />

</androidx.constraintlayout.widget.ConstraintLayout>